@model EditUserViewModel


<div class="d-flex justify-content-center align-items-center">
    <form class="mt-5 bg-white p-3 rounded border shadow" style="width:40rem;" method="post" asp-controller="User" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" hidden/>
        <input asp-for="ImageString" hidden />
        <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.Id" class="text-decoration-none text-danger">
            <i class="bi bi-arrow-left"></i>
            Back
        </a>
        <p class="text-center fs-3 fw-bold text-success">Edit Profile</p>
        <div class="text-danger validation" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label fw-bold"></label>
            <input type="text" class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label fw-bold"></label>
            <input type="text" class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input type="email" class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserName" class="form-label fw-bold"></label>
            <input type="text" class="form-control" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-5">
            <label asp-for="Image" class="form-label fw-bold"></label>
            <input class="form-control mb-2" type="file" asp-for="Image" accept="image/*" id="imgInput">
            <img id="imgPreview" src="@("/Images/"+Model.ImageString)" asp-append-version="true" style="width:12rem;height:auto;border:1px solid black;" />
        </div>

        <button type="submit" class="btn btn-danger w-100">Edit Profile</button>
    </form>
</div>


@section Scripts {
    <script>
        $("#imgInput").change(function () {
            if (this.files && this.files[0]) {

                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgPreview').attr('src', e.target.result);
                }

                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
}