@model LoginViewModel

<div class="d-flex justify-content-center align-items-center">
    <form class="mt-5 bg-white p-3 rounded border shadow" style="width:30rem;" method="post" asp-controller="Account" asp-action="Login">
        <p class="text-center fs-3 fw-bold text-success">Login</p>
        <div asp-validation-summary="ModelOnly" class="text-danger text-center validation"></div>
        <div class="mb-3">
            <label asp-for="UserName" class="form-label fw-bold"></label>
            <input type="text" class="form-control" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label fw-bold"></label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe"></label>
        </div>
        <button type="submit" class="btn btn-primary w-100" asp-route-recipeId="@ViewData["RecipeId"]">Login</button>

        <p class="mt-3 mb-0">Don't have account?<a asp-controller="Account" asp-action="Register" class="ms-2 text-danger text-decoration-none">Register here</a></p>
    </form>
</div>